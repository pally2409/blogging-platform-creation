<style>
* {
-moz-box-sizing: border-box;
box-sizing: border-box;
}


body {
font: 9px;
font-family: "Lato", sans-serif;

      background-image: url("http://love-aesthetics.nl/wp-content/uploads/2014/09/love-aesthetics-fluffy-00.jpg");
      background-position: center;
      min-height: 100%;
      background-repeat: no-repeat;
}

body, html {
    height: 100%;
    color: #777;
    line-height: 1.8;
}

section {

         width: 275px;
         opacity:0.75;
         background: #ecf0f1;

         padding: 0 30px 30px 30px;

         margin: 60px auto;

         text-align: center;

         border-radius: 5px;
}


span    {

         display: block;

         position: relative;

         margin: 0 auto;

         top: -40px;
         height: 100px;

         width:100px;

         background: url('https://static1.squarespace.com/static/5582f155e4b09b4ecb831628/55a82485e4b0a8bba80ed688/55a82486e4b058f342f5d90f/1437082882780/Flickr_onereel_social-icons.png?format=100w') center repeat, #f39c12;

         border-radius: 50%;

         box-shadow: 1px 1px 2px rgba(0,0,0,.3);

}


h1      {

         font-size: 40px;

         font-weight: 100;

         margin-bottom: 30px;

}
input   {

         width: 100%;

         background: #bdc3c7;

         border: none;
height: 30px;

         margin-bottom: 15px;

         border-radius: 5px;

         text-align: center;

         font-size: 14px;

         color: #7f8c8d;

       }


input:focus
       {

          outline: none;

}


.button   {
width: 100%;

          height: 30px;

          border: none;

          background-color: #2980b9;

          color: #ecf0f1;

          font-weight: 100;

          margin-bottom: 15px;

          border-radius: 5px;

          transition: all ease-in-out .2s;

          border-bottom: 3px solid #2980b9;

}


button:focus
         {

           outline: none;

         }


button:hover
         {

           background: #2980b9;

}


h2         {

           font-size: .75em;

         }


a          {

           color: #e74c3c;

           text-decoration: none;

           transition: all ease-in-out .2s;

         }


a:hover    {

            color: #c0392b;

}



</style>
<body>
  <section>

  <span>
  </span>

  <h1>Sign Up</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<p align="center">
  <div class="input">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
</div>
</p>

<p align="center">
  <div class="input">
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
</div>
</p>

<p align="center">
  <div class="input">
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <div>
  </p>
  <p align="center">
  <div class="button">
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
</div>
</p>
<% end %>

<%= render "devise/shared/links" %>
